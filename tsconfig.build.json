{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "extension/dist",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "noEmit": false,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "extension/.tsbuildinfo",
    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/**"]
}
