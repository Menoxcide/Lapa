{
	"compilerOptions": {
	  "target": "ES2022",
	  "module": "NodeNext",
	  "moduleResolution": "NodeNext",
	  "outDir": "dist",
	  "rootDir": "src",
	  "lib": ["ES2022", "DOM"],
	  "sourceMap": true,
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "jsx": "react-jsx",
	  "resolveJsonModule": true,
	  "types": ["node", "react", "react-dom", "vitest/globals"],
	  "allowImportingTsExtensions": true,
	  "noEmit": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "extension/dist"]
  }