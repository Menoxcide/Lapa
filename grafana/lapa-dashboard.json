{
  "dashboard": {
    "title": "LAPA Performance Dashboard",
    "tags": ["lapa", "performance", "benchmarks"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Handoff Latency (p50, p95, p99)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(lapa_handoff_duration_seconds_bucket[5m]))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(lapa_handoff_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(lapa_handoff_duration_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Latency" },
          { "format": "short" }
        ],
        "xaxis": { "mode": "time" }
      },
      {
        "id": 2,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "lapa_memory_usage_bytes{type=\"heap_used\"}",
            "legendFormat": "Heap Used"
          },
          {
            "expr": "lapa_memory_usage_bytes{type=\"heap_total\"}",
            "legendFormat": "Heap Total"
          },
          {
            "expr": "lapa_memory_usage_bytes{type=\"rss\"}",
            "legendFormat": "RSS"
          }
        ],
        "yaxes": [
          { "format": "bytes", "label": "Memory" },
          { "format": "short" }
        ],
        "xaxis": { "mode": "time" }
      },
      {
        "id": 3,
        "title": "Context Compression Ratio",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "lapa_context_compression_ratio",
            "legendFormat": "Compression Ratio"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Ratio" },
          { "format": "short" }
        ],
        "xaxis": { "mode": "time" }
      },
      {
        "id": 4,
        "title": "Event Throughput",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "rate(lapa_events_total[5m])",
            "legendFormat": "Events/sec"
          }
        ],
        "yaxes": [
          { "format": "ops", "label": "Throughput" },
          { "format": "short" }
        ],
        "xaxis": { "mode": "time" }
      },
      {
        "id": 5,
        "title": "Performance Fidelity",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "lapa_performance_fidelity_percent",
            "legendFormat": "Fidelity"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "red" },
                { "value": 95, "color": "yellow" },
                { "value": 99, "color": "green" }
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 6,
        "title": "Task Completion Rate",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 16 },
        "targets": [
          {
            "expr": "rate(lapa_tasks_total{status=\"completed\"}[5m]) / rate(lapa_tasks_total[5m]) * 100",
            "legendFormat": "Completion Rate"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "red" },
                { "value": 90, "color": "yellow" },
                { "value": 95, "color": "green" }
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 7,
        "title": "Benchmark Duration",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
        "targets": [
          {
            "expr": "lapa_benchmark_duration_seconds",
            "legendFormat": "{{benchmark_name}}"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ],
        "xaxis": { "mode": "time" }
      },
      {
        "id": 8,
        "title": "Benchmark Throughput",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
        "targets": [
          {
            "expr": "lapa_benchmark_throughput",
            "legendFormat": "{{benchmark_name}}"
          }
        ],
        "yaxes": [
          { "format": "ops", "label": "Throughput" },
          { "format": "short" }
        ],
        "xaxis": { "mode": "time" }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}

