{
  "name": "lapa-monorepo",
  "version": "1.0.0",
  "description": "LAPA Monorepo - Local AI Pair Programmer Agent",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Menoxcide/Lapa.git"
  },
  "bugs": {
    "url": "https://github.com/Menoxcide/Lapa/issues"
  },
  "homepage": "https://github.com/Menoxcide/Lapa#readme",
  "keywords": [
    "ai",
    "cursor",
    "mcp",
    "ctx-zip",
    "nim",
    "moe",
    "swarm",
    "autogen",
    "roo-code",
    "monorepo"
  ],
  "author": "LAPA Team",
